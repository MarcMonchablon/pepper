body
  background-image url('../ressources/subtle_carbon.png')
  overflow hidden
  
.slide
  background: white
  padding-left 5px

_uiPanelSize = 200px
_uiPanelBackgroundColor = #141414
_uiPanelDecoratorColor = #753D27
_uiPanelLeftMargin = 0.5em
_uiPanelSectionBackgroundColor_onHover = #1B1B1B
_uiPanelSectionBackgroundColor_active = #1B1B1B



.uiPanel
  background _uiPanelBackgroundColor
  color #B6A49C
  width _uiPanelSize
  height 100%
  font-family korpo_sansregular
  &.leftPanel
    float left
  &.rightPanel
    float right
  ul
    list-style-type none
    margin-left 0
  .uiPanelSection
    border-bottom 1px solid _uiPanelDecoratorColor
    header
      padding-left _uiPanelLeftMargin
    &:hover
      background _uiPanelSectionBackgroundColor_onHover
      cursor pointer
    section
      display none
    &.isActive
      background _uiPanelSectionBackgroundColor_active
      header
        border-bottom 1px dashed _uiPanelDecoratorColor
      section
        padding-left 10px
        display block

.presentation
  height 100%
  margin-top 0
  margin-bottom 0
  margin-left _uiPanelSize
  margin-right _uiPanelSize




  
   