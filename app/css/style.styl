body
  background-image url('../ressources/subtle_carbon.png')
  overflow hidden
  
.slide
  background: white
  padding-left 5px

_uiPanelSize = 200px

.uiPanel
  background #141414
  color #B6A49C
  width _uiPanelSize
  height 100%
  font-family korpo_sansregular
  &.leftPanel
    float left
  &.rightPanel
    float right
  ul
    list-style-type none
    margin-left 0
  .uiPanelSection
    padding-left 0.5em
    border-bottom 1px solid #753D27
    &:hover
      background #1B1B1B
      cursor pointer
    section
      display none

.presentation
  height 100%
  margin-top 0
  margin-bottom 0
  margin-left _uiPanelSize
  margin-right _uiPanelSize




  
  